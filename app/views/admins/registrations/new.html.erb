<div class="wrapper">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h2>Sign up</h2>

    <div class="input-box">
      <%= f.input :email, autofocus: true, autocomplete: "email", class: "input" %>
    </div>

    <div class="input-box mt-4">
      <%= f.input :password, autocomplete: "new-password", class: "password" %>
    </div>

    <div class="input-box mt-4">
      <%= f.input :password_confirmation, autocomplete: "new-password", class: "password" %>
    </div>

    <div class="input-box button mt-4">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>

  <%= render "admins/shared/links" %>
</div>
