<div class="wrapper">
  <h2><%= t('devise.passwords.new.forgot_your_password') %></h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "admins/shared/error_messages", resource: resource %>

    <div class="input-box">
      <%= f.input :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="input-box button mt-5">
      <%= f.button :submit, t('devise.passwords.new.send_me_reset_password_instructions') %>
    </div>
  <% end %>

  <%= render "admins/shared/links" %>
</div>
