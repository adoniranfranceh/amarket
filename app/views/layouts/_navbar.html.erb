<div class="wrapper">
  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-white navbar-light shadow">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="bi bi-list"></i></a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
        <a href="index3.html" class="nav-link">Home</a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
        <a href="#" class="nav-link">Contact</a>
      </li>
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
      <!-- Navbar Search -->
      <li class="nav-item">
        <a class="nav-link" data-widget="navbar-search" href="#" role="button">
          <i class="fas fa-search"></i>
        </a>
        <div class="navbar-search-block">
          <form class="form-inline">
            <div class="input-group input-group-sm">
              <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
              <div class="input-group-append">
                <button class="btn btn-navbar" type="submit">
                  <i class="fas fa-search"></i>
                </button>
                <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                  <i class="fas fa-times"></i>
                </button>
              </div>
            </div>
          </form>
        </div>
      </li>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-widget="fullscreen" role="button">
          <i class="bi bi-arrows-fullscreen"></i>
        </a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
        <a class="nav-link" data-widget="control-sidebar" data-controlsidebar-slide="true" href="#" role="button"><i class="bi bi-gear-fill"></i>
        </a>
      </li>
    </ul>
  </nav>

  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Sidebar -->
    <div class="sidebar">
      <!-- Sidebar user panel (optional) -->
      <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image-t-no-hover">
          <%= avatar(current_admin) %>
        </div>
        <div class="info">
          <% @admin = current_admin %>
          <%= link_to "#{@admin.full_name_admin}", admin_template_admin_path(@admin), class: 'd-block float-left'%>
        </div>
      </div>

      <!-- Sidebar Menu -->
      <nav class="mt-2">
          <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
            <li class="nav-item">
              <%= link_to root_path, class: 'nav-link' do %>
                <i class="bi bi-speedometer"></i>
                <p>Dashboard</p>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_template_cash_index_path, class: 'nav-link' do %>
                <i class="bi bi-cash-stack"></i>
                <p>Caixa</p>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_template_sales_path, class: 'nav-link' do %>
                <i class="bi bi-coin"></i>
                <p>Vendas</p>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_template_customers_path, class: 'nav-link' do %>
                <i class="bi bi-person-lines-fill"></i>
                <p>Clientes</p>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_template_inventary_index_path, class: 'nav-link' do %>
                <i class="bi bi-database"></i>
                <p>Estoque</p>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_template_categories_path, class: 'nav-link' do %>
                <i class="bi bi-tags"></i>
                <p>Categorias</p>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_template_products_path, class: 'nav-link' do %>
                <i class="bi bi-box-fill"></i>
                <p>Produtos</p>
              <% end %>
            </li>
          </ul>
        </nav>
      </div>
  </aside>
  <%= render 'layouts/aside' %>
