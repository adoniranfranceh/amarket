<!DOCTYPE html>
<html>
  <head>
    <title>Amarket</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', async: true %>
    <% if params[:controller] == 'admin_template/sales' && action_name == 'new'%>
      <%= javascript_pack_tag 'sale', 'data-turbolinks-track': 'reload', async:true %>
    <% end %>
    <%= javascript_pack_tag 'admin', 'data-turbolinks-track': 'reload', async: true %>
    <% if params[:controller] == 'admin_template/products' %>
      <%= javascript_pack_tag 'product', 'data-turbolinks-track': 'reload', async: true  %>
    <% end %>

  </head>

  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <% if signed_in? %>
        <%= render 'layouts/navbar' %>
      <% end %>

      <div class="content-wrapper">
        <section class="content">
          <div class="container-fluid">
            <%= yield %>
          </div>
        </section>
      </div>

      <footer class="main-footer">
        <div class="float-right d-none d-sm-inline-block">
          <b>Version</b> 3.2.0
        </div>
        <strong>Copyright &copy; 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong>
        All rights reserved.
      </footer>
    </div>
  </body>
</html>
