<div class="float-end"><%= link_to 'Registrar nova venda', new_admin_template_sale_path, class: 'btn btn-success refresh-link' %></div>
<div>
  <table class="table">
    <thead>
      <tr>
        <th class="col-1">Id</th>
        <th class="col-10">Nome</th>
        <th class="col-1"></th>
      </tr>
    </thead>

    <tbody>
      <% @sales.each do |sale| %>   
      <tr>
        <td class="row" style="padding-bottom: 37px;"><%= sale.id %></td>
        <td><%= sale.secondaryproduct_ids %></td>
        <td><%= link_to 'ver', admin_template_sale_path(sale), class: "btn btn-success " %>
        <td><%= link_to 'Ver Nota', invoice_admin_template_sale_path(sale, format: :pdf), class: 'btn btn-primary' %></td>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
