<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <% if model.total_pages > 1 %>
      <% if model.prev_page %>
        <li class="page-item">
          <%= link_to 'Anterior', "#{path}?page=#{model.prev_page}", class: 'page-link' %>
        </li>
      <% else %>
        <li class="page-item disabled">
          <span class="page-link">Anterior</span>
        </li>
      <% end %>

      <% model.total_pages.times do |num| %>
        <% if model.current_page == num + 1 %>
          <li class="page-item active" aria-current="page">
            <span class="page-link"><%= num + 1 %></span>
          </li>
        <% else %>
          <li class="page-item">
            <%= link_to num + 1, "#{path}?page=#{num + 1}", class: 'page-link' %>
          </li>
        <% end %>
      <% end %>

      <% if model.next_page %>
        <li class="page-item">
          <%= link_to 'Próximo', "#{path}?page=#{model.next_page}", class: 'page-link' %>
        </li>
      <% else %>
        <li class="page-item disabled">
          <span class="page-link">Próximo</span>
        </li>
      <% end %>
    <% end %>
  </ul>
</nav>
