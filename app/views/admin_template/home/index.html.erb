<div class="container text-center mt-5">
  <h1 class="mb-4">Bem-vindo ao Sistema PDV</h1>

  <div class="row justify-content-center">
    <div class="col-md-4">
      <h2 class="mb-3">Atalhos:</h2>
      <ul class="list-group">
        <li class="list-group-item">
          <%= link_to admin_template_sales_path, class: 'btn btn-success btn-block' do %>
            <i class="bi bi-cash"></i> Vendas
          <% end %>
        </li>
        <li class="list-group-item">
          <%= link_to admin_template_customers_path, class: 'btn btn-danger btn-block' do %>
            <i class="bi bi-cart"></i> Produtos
          <% end %>
        </li>
        <li class="list-group-item">
          <%= link_to admin_template_products_path, class: 'btn btn-info btn-block' do %>
            <i class="bi bi-people"></i> Clientes
          <% end %>
        </li>
      </ul>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-6">
      <h5>Tempo de Atividade:</h5>
      <p id="uptime"><%= uptime(current_admin.created_at) %></p>
    </div>

    <div class="col-md-6">
      <h5>Dia que Entrou:</h5>
      <p id="entryDate"><%= I18n.l(current_admin.created_at, format: '%d de %B de %Y') %></p>
    </div>
  </div>
</div>
