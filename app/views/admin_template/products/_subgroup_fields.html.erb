<div class="col-md-6" style="margin-left: 25%;">
  <div class="nested-fields card card-primary">
    <div class="card-header">
      <h3 class="card-title">Subgrupo</h3>
    </div>
    <div class="card-body">
      <div class="row">
        <%= f.text_field :size, placeholder: :size, class: 'form-control col-3 mr-4' %>
        <%= f.text_field :number, placeholder: :number, class: 'form-control col-3 mr-4' %>
        <%= f.text_field :quantity, placeholder: :quantity, class: 'form-control col-3 ' %>
      </div>
      <br>
      <% if action_name != 'show' %>
        <%= link_to_remove_association('Remover', f, class: 'btn btn-danger') %>
      <% end %>
    </div>
  </div>
</div>
