      <div class="col-md-6">
        <%= profile_admin_fields.input :first_name, class: 'form-control', placeholder: 'Primeiro Nome' %>
      </div>
      <div class="col-md-6">
        <%= profile_admin_fields.input :last_name, class: 'form-control', placeholder: 'Sobrenome' %>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.input :email, label: false, placeholder: 'EndereÃ§o de Email', class: 'form-control' %>
  </div>
