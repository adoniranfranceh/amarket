<%= form_with(model: [:admin_template, @admin]) do |form| %>
  <div class="row">
      <div class="mb-3 col-6">
        <%= form.fields_for :profile_admin do |profile_admin_fields| %>
          <div class="mb-3">
            <%= profile_admin_fields.label :first_name, class: 'form-label' %>
            <%= profile_admin_fields.text_field :first_name, class: 'form-control' %>
          </div>
        <% end %>
      </div>

      <div class="mb-3 col-6">
        <%= form.fields_for :profile_admin do |profile_admin_fields| %>
          <div class="mb-3">
            <%= profile_admin_fields.label :last_name, class: 'form-label' %>
            <%= profile_admin_fields.text_field :last_name, class: 'form-control' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="mb-3">
      <%= form.label :email, class: 'form-label' %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>
  </div>
  <div>
    <%= form.submit 'Salvar', class: 'btn btn-primary' %>
  </div>
<% end %>
