<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Abrir Caixa</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for([:admin_template, @cash.cash_registers.build]) do |form| %>
          <%= form.input :initial_value, as: :string, placeholder: 'Valor inicial', input_html: { class: 'form-control price-input', step: '0.01' } %>
          <%= form.button :submit, 'Abrir Caixa', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
