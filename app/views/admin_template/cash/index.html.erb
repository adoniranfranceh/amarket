<% if @cash.present? && @cash.is_open %>
  <h1>Olá, Caixa <%= @cash.cash_name %></h1>
  <%= link_to 'Fechar Caixa', close_admin_template_cash_registers_path, method: :post, class: 'btn btn-danger' %>
<% else %>
  <h1>Olá, Caixa <%= @cash.cash_name %></h1>
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap">Abrir caixa</button>
<% end %>

<%= render 'modal' %>
