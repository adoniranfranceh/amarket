<% if @cash.present? && @cash.is_open %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="text-center mt-4">
          <h1 class="display-4">Olá, <%= @admin.full_name_admin %></h1>
        </div>
        <div class="text-center mt-4">
          <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#update" data-whatever="@getbootstrap">Movimentar</button>
          <%= link_to 'Fechar Caixa', close_admin_template_cash_registers_path, method: :patch, class: 'btn btn-danger btn-lg ml-2' %>
        </div>
        <div class="card mt-4">
          <div class="card-body text-center">
            <h2 class="card-title">Total em Caixa</h2>
            <h3><%= number_to_currency(current_total_cash, unit: "R$", format: "%u %n") %></h3>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'update_modal' %>
<% else %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="text-center mt-4">
          <h1 class="display-4">Olá, <%= @admin.full_name_admin %></h1>
        </div>
        <div class="text-center mt-4">
          <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#open">Abrir caixa</button>
        </div>
      </div>
    </div>
  </div>
  <%= render 'open_modal' %>
<% end %>
