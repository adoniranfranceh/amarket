<div class="d-flex justify-content-center">
  <div class="col-md-8">
    <%= simple_form_for [:admin_template, @customer], html: { class: 'customer-form' } do |form| %>
      <div class="<%= fieldset_disabled %>">
        <div class="mb-3">
          <%= form.input :name, label: I18n.t('activerecord.attributes.customer.name'), class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.input :phone, as: :string, label: I18n.t('activerecord.attributes.customer.phone'), placeholder: '(99) 9 9999-9999', input_html: { class: 'form-control phone' } %>
        </div>

        <div class="mb-3">
          <%= form.input :email, label: I18n.t('activerecord.attributes.customer.email'), class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label I18n.t('activerecord.attributes.customer.date_of_birth') %>
          <%= form.date_field :date_of_birth, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.input :city, label: I18n.t('activerecord.attributes.customer.city'), class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.input :neighborhood, label: I18n.t('activerecord.attributes.customer.neighborhood'), class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.input :andress, label: I18n.t('activerecord.attributes.customer.andress'), class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.input :house_number, label: I18n.t('activerecord.attributes.customer.house_number'), class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.input :cpf, as: :string, label: I18n.t('activerecord.attributes.customer.cpf'), input_html: { class: 'form-control cpf-input'} %>
        </div>
      </div>

      <div class="text-center mb-4">
        <% if action_name == 'show' %>
          <%= link_to edit_admin_template_customer_path(@customer), data: { turbolinks: false }, class: 'btn btn-primary mr-2' do %>
            <i class="bi bi-pencil-square"></i> Editar
          <% end %>
          <%= link_to admin_template_customer_path(@customer), method: :delete, class: 'btn btn-danger', data: { confirm: "VocÃª quer excluir #{@customer.name}?" } do %>
            <i class="bi bi-trash-fill"></i> Excluir
          <% end %>
        <% else %>
          <%= form.button :submit, 'Salvar', class: 'btn btn-primary' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
